# Volume control
# TODO find out why this won't work when
# run from a keybinding
# "amixer sset Master,0 2db+ on"
# 	XF86AudioRaiseVolume
# "amixer sset Master,0 2db- on"
# 	XF86AudioLowerVolume
"mpc volume +3"
	XF86AudioRaiseVolume
"mpc volume -3"
	XF86AudioLowerVolume

# Music player control
"mpc toggle"
	XF86AudioPlay
"mpc next"
	XF86AudioNext
"mpc prev"
	XF86AudioPrev

# Brightness control
"/home/balduin/scripts/light-wrapper up"
	XF86MonBrightnessUp
"/home/balduin/scripts/light-wrapper down"
	XF86MonBrightnessDown

# Keyboard backlight toggle
"/home/balduin/scripts/toggle-kbdlight.sh"
	XF86KbdBrightnessDown

# Lock the screen with i3lock
"/home/balduin/scripts/lock.sh"
	XF86LaunchA
