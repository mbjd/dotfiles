#######################
# sxhkd configuration #
#######################

# Volume control
XF86AudioRaiseVolume
	amixer -q set Master 2dB+ unmute; pkill -RTMIN+10 i3blocks;
XF86AudioLowerVolume
	amixer -q set Master 2dB- unmute; pkill -RTMIN+10 i3blocks;
XF86AudioMute
	amixer -q set Master toggle; pkill -RTMIN+10 i3blocks;

# Music player control
XF86AudioPlay
	mpc toggle
XF86AudioNext
	mpc next
XF86AudioPrev
	mpc prev

# Brightness control
XF86MonBrightnessUp
	/home/balduin/scripts/light-wrapper up
XF86MonBrightnessDown
	/home/balduin/scripts/light-wrapper down

# Keyboard backlight toggle
XF86KbdBrightnessDown
	/home/balduin/scripts/toggle-kbdlight.sh

# Launch st
XF86KbdBrightnessUp
	st

# Restart sxhkd
XF86KbdBrightnessUp
	pkill -USR1 -x sxhkd

# Lock the screen
XF86LaunchA
	slock

# Screenshot with F4
XF86LaunchB
	scrot -e 'mv $f /home/balduin/pics/scrot/'
